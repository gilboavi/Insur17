<!DOCTYPE html>
<html dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Insur17</title>
    <style>
                .dropdown-menu {
	                position:relative;
	                width:10px;
	                top: 10px !important;
                    left: 0px !important;
                }
        </style>
    <environment include="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/site.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.7/css/bootstrap.min.css"
              asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    </environment>
    <script src="~/lib/jquery/dist/jquery.js"></script>

</head>
<body>
    <nav class="navbar navbar-avi">

        <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->

          
            
                      
                  
              
        
            <div class="collapse navbar-collapse " id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav navbar-header">
                    <li>  <a  href="./../Home/">ראשי</a></li>
                    <li id="clientTag">@Html.ActionLink("לקוח", "Index", "Client")</li>
                    <li id="DocInFilesTab">@Html.ActionLink("שיוך מסמכים", "DocInFilesNew", "Document")</li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">מעקבים <span class="caret"></span></a>
                        <ul class="dropdown-menu">

                            <li>@Html.ActionLink("משימות", "ShowConversationsNotDone", "Conversation")</li>
                            <li>@Html.ActionLink("מעקב שקים", "FollowChecksListNotDone", "FollowChecks")</li>
                            <li>@Html.ActionLink("מעקב גמל", "CuttingKuptGemel", "KupaGemel")</li>
                            <li>@Html.ActionLink("מעקב הצעות", "CuttingProposalLife", "ProposalLife")</li>
                            <li>@Html.ActionLink("פניות חדשות", "ConversationSendedToUserList", "Conversation")</li>
                            <li>@Html.ActionLink("מעקב פגישות", "InvestigateMeeting", "Meeting")</li>

                            @*<li>
                            <a href="#" onclick="ListWithoutParameters('/../Reminder/RicuzReminding','main')">
                                        תזכורות
                            </a>
                        </li>*@
                            <li>@Html.ActionLink("תזכורות", "RicuzReminding", "Reminder")</li>
                            <li>@Html.ActionLink("הפקדות", "ComparePremia", "ReadXml")</li>
                            <li>@Html.ActionLink("חובות", "Debts", "ReadXml")</li>
                        </ul>
                    </li>


                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">חיתוכים  <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li id="CutsTab">@Html.ActionLink("חיתוכים", "Index", "Cutting")</li>
                            <li id="CutsTab2">@Html.ActionLink("הצעות חדשות", "CuttingNewProposalLife", "Cutting")</li>
                            <li id="CutsTab2">@Html.ActionLink("הצעות גמל", "CuttingNewKupaGemel", "Cutting")</li>
                            <li>@Html.ActionLink("עמלות", "CommissionByName", "Commission")</li>


                        </ul>
                    </li>




                    <li>@Html.ActionLink("תחזוקה", "Index", "Maintenance")</li>

                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">קבצים  <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("שיוך מסמכים", "DocInFilesNew", "Document")</li>
                            <li>@Html.ActionLink(" שמירת קבצים ב - ExcelFiles", "UpLoadFile", "Uploadfile")</li>
                            <li>@Html.ActionLink("קבצי מסלקה", "LoadXmlFileFormMislaka", "ReadXml")</li>
                        </ul>
                    </li>





                    <li>@Html.ActionLink("כניסה", "LogOn", "Account")</li>





                </ul>


            </div><!-- /.navbar-collapse -->

        </div><!-- /.container-fluid -->
    </nav>

    <partial name="_CookieConsentPartial" />

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; 2019 - Insur17</p>
        </footer>
    </div>

    <environment include="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap3-typeahead.min.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-3.3.1.min.js"
                asp-fallback-src="~/lib/jquery/dist/jquery.min.js"
                asp-fallback-test="window.jQuery"
                crossorigin="anonymous"
                integrity="sha384-tsQFqpEReu7ZLhBV2VZlAu7zcOV+rXbYlF2cqB8txI/8aZajjp4Bqd+V6D5IgvKT">
        </script>
        <script src="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.7/bootstrap.min.js"
                asp-fallback-src="~/lib/bootstrap/dist/js/bootstrap.min.js"
                asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal"
                crossorigin="anonymous"
                integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa">
        </script>

    </environment>

    <script src="~/js/base_functions.js"></script>
    @RenderSection("Scripts", required: false)

</body>
</html>
